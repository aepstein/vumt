{
  "name": "vumt",
  "version": "0.0.1",
  "description": "Visitor Use Management Tool",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "client-build": "npm run build --prefix client",
    "start": "NODE_ENV=development node server.js",
    "server": "NODE_ENV=development nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "test-cucumber": "npm run client-build && NODE_ENV=test npx cucumber-js",
    "test": "mocha --timeout 10000"
  },
  "author": "Ari Epstein",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^5.0.0",
    "config": "^3.2.4",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.3"
  },
  "cssnano": {
    "preset": [
      "default",
      {
        "calc": false
      }
    ]
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cucumber": "^6.0.2",
    "http-shutdown": "^1.2.1",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.3",
    "puppeteer": "^1.20.0"
  }
}
